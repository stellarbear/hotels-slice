{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "node",
        "target": "ES2019",
        "strict": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictFunctionTypes": true,
        "strictPropertyInitialization": true,
        "forceConsistentCasingInFileNames": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "declaration": true,
        "incremental": true,
        "composite": true
    },
    "exclude": [
        "node_modules"
    ]
}

#!/usr/bin/env bash

set -x
command -v source || exit 1

source "${!CI_COMMIT_REF_NAME}"
source "${!CI_EXTENDS}"

REGISTRY_IMAGE=${CI_REGISTRY_IMAGE}/${CI_COMMIT_REF_NAME}
VERSION=${CI_PIPELINE_ID:-"latest"}

IMAGE_NODE=${REGISTRY_IMAGE}-node:${VERSION}
IMAGE_BASE=${REGISTRY_IMAGE}-base:${VERSION}
IMAGE_ROUTER=${REGISTRY_IMAGE}-router:${VERSION}
IMAGE_APP=${REGISTRY_IMAGE}-app:${VERSION}
IMAGE_UI=${REGISTRY_IMAGE}-ui:${VERSION}
